{
  "name": "kuker-emitters",
  "version": "3.3.0",
  "description": "Emitters for Kuker Chrome extension",
  "main": "lib",
  "scripts": {
    "build-to-lib": "babel src --out-dir lib",
    "build-stent": "browserify ./lib/StentEmitter.js -o ./standalone/StentEmitter.js --standalone StentEmitter && uglifyjs ./standalone/StentEmitter.js -o ./standalone/StentEmitter.min.js",
    "build-redux": "browserify ./lib/ReduxEmitter.js -o ./standalone/ReduxEmitter.js --standalone ReduxEmitter && uglifyjs ./standalone/ReduxEmitter.js -o ./standalone/ReduxEmitter.min.js",
    "build-redux-saga": "browserify ./lib/ReduxSagaEmitter.js -o ./standalone/ReduxSagaEmitter.js --standalone ReduxSagaEmitter && uglifyjs ./standalone/ReduxSagaEmitter.js -o ./standalone/ReduxSagaEmitter.min.js",
    "build-base": "browserify ./lib/BaseEmitter.js -o ./standalone/BaseEmitter.js --standalone BaseEmitter && uglifyjs ./standalone/BaseEmitter.js -o ./standalone/BaseEmitter.min.js",
    "build": "npm run test && npm run build-to-lib && npm run build-stent && npm run build-redux && npm run build-redux-saga && npm run build-base",
    "test": "./node_modules/.bin/mocha --require babel-register --require babel-polyfill --require test/setup.js --require jsdom-global/register --reporter spec --slow 100 './src/**/**.spec.{js,jsx}'",
    "test:watch": "./node_modules/.bin/mocha --require babel-register --require babel-polyfill --require test/setup.js --require jsdom-global/register --reporter spec --slow 100 --watch --watch-extensions jx,jsx,json './src/**/**.spec.{js,jsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krasimir/kuker-emitters.git"
  },
  "keywords": [
    "stent",
    "chrome",
    "extension",
    "emitters"
  ],
  "author": "Krasimir Tsonev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krasimir/kuker-emitters/issues"
  },
  "homepage": "https://github.com/krasimir/kuker-emitters#readme",
  "devDependencies": {
    "babel-cli": "6.24.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-add-module-exports": "0.2.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-react": "6.23.0",
    "babel-preset-stage-3": "6.22.0",
    "babel-register": "6.24.0",
    "browserify": "^14.4.0",
    "chai": "3.5.0",
    "chai-enzyme": "0.6.1",
    "enzyme": "2.7.1",
    "eslint": "^4.12.1",
    "istanbul": "1.1.0-alpha.1",
    "jsdom": "9.8.3",
    "jsdom-global": "2.1.1",
    "mocha": "3.2.0",
    "react": "15.4.2",
    "react-addons-test-utils": "15.4.2",
    "react-dom": "15.4.2",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "sinon": "2.0.0",
    "sinon-chai": "2.9.0",
    "stent": "^3.6.6",
    "uglify-js": "^3.0.28",
    "chai-subset": "^1.6.0"
  }
}

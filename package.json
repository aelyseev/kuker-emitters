{
  "name": "stent-dev-tools-emitters",
  "version": "0.1.0",
  "description": "Emitters for Stent's Chrome extension",
  "main": "lib",
  "scripts": {
    "build-stent": "babel src --out-dir lib && browserify ./lib/StentEmitter.js -o ./standalone/StentEmitter.js --standalone StentEmitter && uglifyjs ./standalone/StentEmitter.js -o ./standalone/StentEmitter.min.js",
    "build": "npm run test && npm run build-stent",
    "test": "./node_modules/.bin/mocha --require babel-register --require babel-polyfill --require test/setup.js --require jsdom-global/register --reporter spec --slow 100 './src/**/**.spec.{js,jsx}'",
    "test:watch": "./node_modules/.bin/mocha --require babel-register --require babel-polyfill --require test/setup.js --require jsdom-global/register --reporter spec --slow 100 --watch --watch-extensions jx,jsx,json './src/**/**.spec.{js,jsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krasimir/stent-dev-tools-emitters.git"
  },
  "keywords": [
    "stent",
    "chrome",
    "extension",
    "emitters"
  ],
  "author": "Krasimir Tsonev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krasimir/stent-dev-tools-emitters/issues"
  },
  "homepage": "https://github.com/krasimir/stent-dev-tools-emitters#readme",
  "devDependencies": {
    "babel-cli": "6.24.0",
    "babel-plugin-add-module-exports": "0.2.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-react": "6.23.0",
    "babel-preset-stage-3": "6.22.0",
    "babel-register": "6.24.0",
    "browserify": "^14.4.0",
    "chai": "3.5.0",
    "chai-enzyme": "0.6.1",
    "enzyme": "2.7.1",
    "istanbul": "1.1.0-alpha.1",
    "jsdom": "9.8.3",
    "jsdom-global": "2.1.1",
    "mocha": "3.2.0",
    "react": "15.4.2",
    "react-addons-test-utils": "15.4.2",
    "react-dom": "15.4.2",
    "sinon": "2.0.0",
    "sinon-chai": "2.9.0",
    "uglify-js": "^3.0.28",
    "stent": "^3.6.6"
  }
}
